<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity"
    xmlns:android="http://schemas.android.com/apk/res/android">



    <Button
        android:id="@+id/btnUpdateFragment"
        android:layout_width="187dp"
        android:layout_height="112dp"
        android:layout_weight="1"
        android:text="Fragment 1" />

    <Button
        android:id="@+id/btnFragment2"
        android:layout_width="213dp"
        android:layout_height="147dp"
        android:layout_toRightOf="@id/btnUpdateFragment"
        android:layout_weight="1"
        android:text="Fragment 2" />

    <FrameLayout
        android:id="@+id/flFragment"
        android:name="com.androiddevs.grocerylist.UpdateFragment"
        android:layout_width="match_parent"
        android:layout_height="378dp"
        android:layout_below="@id/btnFragment2"
        android:layout_marginTop="41dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/activity1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnUpdateFragment"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="46dp"
        android:layout_marginLeft="46dp"
        android:layout_marginTop="24dp"
        android:text="Go to activity 1" />
</RelativeLayout>